{{# if products }}
<div class="row">
    <div class="col-sm-8 col-md-8 col-md-offset-3 col-sm-offset-3">
        <div class="card">
            <div class="card-body">
                Checkout
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-8 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each products}}
            <li class="list-group-item">
                <strong>{{this.item.title}}</strong>
                <span class="badge badge-info">${{this.price}}</span>
                <div class="btn-group float">
                    <button class="btn btn-primary btn-sm dropdown-toggle" style="font-size:10px" data-toggle="dropdown"
                        type="button" aria-haspopup="true" id="dropdownMenu1" aria-expanded="false">
                        Actions
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                        <li><a class="dropdown-item" href="/remove/{{this.item._id}}">Remove Item</a></li>
                    </ul>
                </div>
                <span class="badge badge-primary float-right">{{this.qty}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <hr>
        <strong>Total: ${{totalPrice}}</strong>
        <hr>
    </div>

</div>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a type="button" href="/checkout" class="btn btn-success">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <div class="card">
            <div class="card-body">
                <p class="card-text">
                    <h2>No Items in Cart</h2>
                </p>
            </div>
        </div>
    </div>
</div>
{{/if}}