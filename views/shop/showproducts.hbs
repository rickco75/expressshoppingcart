<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#collapseCreateProduct" role="button" aria-expanded="false"
                        aria-controls="collapseCreateProduct" data-toggle="collapse" class="btn btn-primary">Create
                        Product (Show/Hide)</a>
                </h4>
            </div>
        </div>
    </div>
</div>
<div class="row collapse" id="collapseCreateProduct">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form action="/createProduct" method="POST">
                    <div class="form-group">
                        <label for="name" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" name="name" class="form-control" id="name" placeholder="my widget">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="type" class="col-sm-2 col-form-label">Type</label>
                        <div class="col-sm-10">
                            <select name="type">
                                <option value="good">good</option>
                                <option value="service">service</option>
                            </select>
                        </div>
                    </div>
                    {{!-- <div class="form-group">
                        <label for="description" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <textarea name="description" id="description" cols="35" rows="5"></textarea>
                        </div>
                    </div>                     --}}

                    <div class="form-group row">
                        <div class="float-left col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#collapseProducts" role="button" aria-expanded="false" aria-controls="collapseProducts"
                        data-toggle="collapse" class="btn btn-primary">Products (Show/Hide)</a>
                </h4>
            </div>
        </div>
    </div>
</div>
<div class="row show" id="collapseProducts">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <table id="productstable"
                    class="table table-responsive table-striped table-sm-responsive table-md-responsive">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Caption</th>
                            <th>Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.caption}}</td>
                            <td><a title="click here to view product" href="/showproduct/{{this.id}}">{{this.id}}</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Caption</th>
                            <th>Id</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>