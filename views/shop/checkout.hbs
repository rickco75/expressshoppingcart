            <button type="submit">Pay ${{total}}</button>
            <div class="outcome">
                <div class="error"></div>
                <div class="success d-none">
                    {{!-- Success! Your Stripe token is <span class="token"></span> --}}
                    <span class="token d-none"></span>
                </div>
            </div>
