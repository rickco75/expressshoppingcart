<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}d-none{{/if}}" >
            {{successMsg}}
        </div>
    </div>
</div>

{{#each products }}
<div class="row mt-3">
    {{# each this }}
    <div class="col-sm-6 col-md-4 ">
        <div class="thumbnail border" style="text-align:center">
            <img class="img-responsive" style="margin-top:2em;" style="margin-top:2em;" src="{{this.imagePath}}" alt="">
            <div class="caption">
                <h3>{{this.title}}</h3>
                <p style="text-align:left;margin:1em" class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price float-left" style="margin-left:2em;">${{this.price}}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right" role="button">Add to
                        Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}