<div class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><span class="font-weight-bold">Name: </span>{{product.name}}</li>
    <li class="list-group-item"><span class="font-weight-bold">Desc: </span> {{product.description}}</li>
    <li class="list-group-item"><span class="font-weight-bold">Caption: </span> {{product.caption}}</li>
    <li class="list-group-item"><span class="font-weight-bold">Dimensions: </span> 
    {{#each dimensions}} {{this}} x {{/each}}</li>    
    <li class="list-group-item"><span class="font-weight-bold">Product Id: </span> {{product.id}}</li>    
  </ul>
</div>
{{#each images}}
    <img style="width:200px;height:200px;" src="{{this}}"/>
{{/each}}
<hr>

<a href="/listproducts">return back to product list</a>