<div class="row">
    <div class="col-md-12 col-md-offset-4">
        <h4 class="text-danger">{{message}}</h4>
        <h1>Sign In</h1>
        <form action="/user/signin" method="post" autocomplete="off">
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input autocomplete="false" type="text" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input autocomplete="false" type="password" id="password" name="password" class="form-control">
            </div>            
            <input type="hidden" name="_csrf" id="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
    </div>
    <div class="row" style="margin:3em">
        <div class="col-md-12">
        <p>Don't have an account? <a href="/user/signup">Click here to signup</a></p>

        </div>
    </div>
</div>