{{#each products }}
<div class="row mt-3">
    {{#each this }}
    <div class="col-sm-6 col-md-4 ">
        <div class="thumbnail border" style="text-align:center">
            <img class="img-responsive rounded-lg" style="margin-top:2em;max-width:250px;" style="margin-top:2em;" src="{{this.images}}" alt="">
            <div class="caption">
                <h3>{{this.name}}</h3>
                <p style="text-align:left;margin:1em" class="description">{{this.description}}</p>
                <div class="clearfix">
                    <div class="price float-left" style="margin-left:2em;">${{this.price}}</div>
                    <a href="/stripe/add-to-cart/{{this.id}}" class="btn btn-success float-right" role="button">Add to
                        Cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}